/* pages/test.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-motto {
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.options {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  margin-bottom: 10px;
  align-items: top;
}

.label {
  margin-bottom: 20px;
  font-size: medium;
}

.group {
  display: flex;
  flex-direction: column;
  margin-left: 30px;
  margin-right: 30px;
  align-items: center;
}

.items {
  display: flex;
  flex-direction: row;
  margin-top: 5px;
  margin-bottom: 5px;
  font-size: small;
  border: 3rpx solid black;
  border-radius: 10rpx;
  padding: 10rpx;
}

.window {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
  margin-bottom: 20px;
  align-items: center;
}

.img {
  width: 320;
  height: 240;
}

.button {
  margin-top: 20px;
}
